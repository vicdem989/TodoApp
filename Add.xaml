<Window x:Class="Todo_App.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo_App"
        mc:Ignorable="d"
        Title="Add" Height="450" Width="800">
    <Grid Background="DimGray">
        <Button x:Name="BtnAddConfirm" Content="Add to Todo" HorizontalAlignment="Left" Margin="577,143,0,0" VerticalAlignment="Top" Click="BtnAddConfirm_Click"/>
        <TextBox x:Name="TxtInputName" HorizontalAlignment="Left" Margin="77,154,0,0" TextWrapping="Wrap" Text="Input Name" VerticalAlignment="Top" Width="150" TextChanged="TxtInputName_TextChanged" />
        <TextBox x:Name="TxtInputDesc" HorizontalAlignment="Left" Margin="283,154,0,0" TextWrapping="Wrap" Text="Input Description" VerticalAlignment="Top" Width="200" TextChanged="TxtInputName_TextChanged" Height="63" />
        <TextBox x:Name="TxtTempOutput" HorizontalAlignment="Left" Margin="349,268,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="318" Height="73"/>
        <TextBox x:Name="txtFind" HorizontalAlignment="Left" Margin="552,0,0,0" TextWrapping="Wrap" Text="Find SThing" VerticalAlignment="Center" Width="120" TextChanged="txtFind_TextChanged"/>
    </Grid>
</Window>
